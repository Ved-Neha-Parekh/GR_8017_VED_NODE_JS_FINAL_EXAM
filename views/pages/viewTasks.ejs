<%- include("../partials/header") %>

    <div class="page-wrapper">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">My Tasks</h4>
                    <div class="ms-auto text-end">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">List</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Task List</h5>
                            <div class="table-responsive">

                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <% if (user.role==='admin' ) { %>
                                                <th>User</th>
                                                <% } %>
                                                    <th>Title</th>
                                                    <th>Category</th>
                                                    <th>Priority</th>
                                                    <th>Status</th>
                                                    <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (tasks && tasks.length> 0) { %>
                                            <% tasks.forEach(task=> { %>
                                                <tr>
                                                    <% if (user.role==='admin' ) { %>
                                                        <td>
                                                            <%= task.createdBy ? task.createdBy.username : 'Unknown' %>
                                                        </td>
                                                        <% } %>
                                
                                                            <td>
                                                                <%= task.title %>
                                                            </td>
                                                            <td>
                                                                <%= task.category.name %>
                                                            </td>
                                
                                                            <td>
                                                                <% if(task.priority=='high' ) { %>
                                                                    <span class="badge bg-danger">High</span>
                                                                    <% } else if(task.priority=='medium' ) { %>
                                                                        <span class="badge bg-warning">Medium</span>
                                                                        <% } else { %>
                                                                            <span class="badge bg-success">Low</span>
                                                                            <% } %>
                                                            </td>
                                                            <td>
                                                                <% if(task.status=='completed' ) { %>
                                                                    <span class="badge bg-success">Completed</span>
                                                                    <% } else { %>
                                                                        <span class="badge bg-warning">Pending</span>
                                                                        <% } %>
                                                            </td>
                                
                                                            <td>
                                                                <a href="/task/edit-task/<%= task.id %>" class="btn btn-sm btn-info">Edit</a>
                                                                <a href="/task/delete-task/<%= task.id %>" class="btn btn-sm btn-danger">Delete</a>
                                                            </td>
                                                </tr>
                                                <% }) %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="6" class="text-center">No Tasks Found</td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include("../partials/footer") %>